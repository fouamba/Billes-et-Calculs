GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

############################################
# Realtime
############################################
REALTIME_SECRET_KEY_BASE=votre_secret_key_base_genere

############################################
# Analytics (Logflare)
############################################
