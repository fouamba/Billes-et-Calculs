GOOGLE_PROJECT_ID=
GOOGLE_PROJECT_NUMBER=

############################################
# Storage
############################################
IMGPROXY_ENABLE_WEBP_DETECTION=true

############################################
# Development vs Production
############################################
ENVIRONMENT=production
